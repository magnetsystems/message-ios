source 'https://github.com/CocoaPods/Specs'
source 'https://github.com/magnetsystems/iOS-Distribution.git'

xcodeproj 'MMX Tests'
workspace '../MMX'
inhibit_all_warnings!

def import_pods
  use_frameworks!
  pod 'Kiwi', '~> 2.3'
  pod 'MMX', :path => '../'
  pod 'MagnetMobileServer', '~>3.0'
end

target :ios do
  platform :ios, '8.0'
  link_with 'iOS Tests'
  import_pods
end

